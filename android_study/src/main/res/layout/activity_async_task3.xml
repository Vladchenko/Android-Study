<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".background_jobs.asynctask.AsyncTask3Activity">

    <TextView
        android:id="@+id/asynctask3_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Downloading a picture ..."
        android:layout_above="@+id/asynctask3_progress_text_view"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/asynctask3_progress_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_above="@+id/asynctask3_image_view"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/asynctask3_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <ProgressBar
        android:id="@+id/asynctask3_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asynctask3_image_view"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
