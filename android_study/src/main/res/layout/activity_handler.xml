<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vladislav.androidstudy.handler.HandlerActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/background_task_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_to_run"
        android:textSize="@dimen/address_text_size"
        android:layout_alignBottom="@+id/run_backgroubd_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/run_backgroubd_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run task"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:id="@+id/background_task_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/run_backgroubd_button"
        android:layout_centerHorizontal="true" />

</LinearLayout>
