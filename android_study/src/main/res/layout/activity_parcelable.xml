<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vladislav.androidstudy.activities.ParcelableActivity">

    <TextView
        android:id="@+id/planet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/planet_title_margin"
        android:text="Planet specs:" />

    <GridLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/planet_title"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="3">
        <TextView
            android:id="@+id/planet_size_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size:"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/planet_distance_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/planet_weight_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight:"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/planet_size_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/planets_specs_margin"/>
        <TextView
            android:id="@+id/planet_weight_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/planets_specs_margin"/>
        <TextView
            android:id="@+id/planet_distance_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/planets_specs_margin"/>
    </GridLayout>

</RelativeLayout>
