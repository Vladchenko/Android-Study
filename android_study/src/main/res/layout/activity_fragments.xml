<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="10"
    tools:context="com.example.vladislav.androidstudy.activities.fragments_activity.FragmentsActivity">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="3"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Fragment" />

    <Button
        android:id="@+id/one_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 fragment" />

    <Button
        android:id="@+id/two_fragments_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 fragments" />

    <Button
        android:id="@+id/dynamic_fragments_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dynamic" />

</GridLayout>
