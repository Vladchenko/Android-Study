<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_services"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vladislav.androidstudy.services.ServicesDemo1Activity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/service_column1_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Started"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/service_column1_start_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start" />

            <Button
                android:id="@+id/service_column1_stop_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/service_column2_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bound"
                android:textAlignment="center" />

            <Button
                android:id="@+id/service_column2_bind_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bind" />

            <Button
                android:id="@+id/service_column2_unbind_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unbind" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/service_column3_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mixed"
                android:textAlignment="center" />

            <Button
                android:id="@+id/service_column3_start_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start" />

            <Button
                android:id="@+id/service_column3_stop_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop" />

            <Button
                android:id="@+id/service_column3_bind_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bind" />

            <Button
                android:id="@+id/service_column3_unbind_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unbind" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="Service operating log:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/service_log_title_text_view" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/service_log_contents_text_view"
            android:background="@drawable/rounded_corner"
            android:scrollbars="vertical"
            android:maxLines="5000"/>

    </LinearLayout>

</LinearLayout>
