<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:id="@+id/initial_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.vladislav.androidstudy.activities.InitialActivity">

        <Button
            android:id="@+id/send_email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Send Email" />

        <Button
            android:id="@+id/widgets_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/return_result_button"
            android:layout_toRightOf="@+id/send_email_button"
            android:layout_toStartOf="@+id/return_result_button"
            android:onClick="gotoWidgetsActivity"
            android:text="Widgets" />

        <Button
            android:id="@+id/widgets2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/fragments_button"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/fragments_button"
            android:layout_toRightOf="@+id/widgets_button"
            android:onClick="gotoWidgets2Activity"
            android:text="Widgets2" />

        <Button
            android:id="@+id/layouting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/send_email_button"
            android:layout_toLeftOf="@+id/widgets_button"
            android:layout_toStartOf="@+id/widgets_button"
            android:text="Layouting" />

        <Button
            android:id="@+id/aligning_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widgets_button"
            android:layout_toEndOf="@+id/send_email_button"
            android:layout_toRightOf="@+id/send_email_button"
            android:onClick="gotoAligningActivity"
            android:text="Aligning" />

        <Button
            android:id="@+id/return_result_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/aligning_button"
            android:layout_alignBottom="@+id/aligning_button"
            android:layout_toRightOf="@+id/aligning_button"
            android:text="Get result" />

        <Button
            android:id="@+id/list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/layouting_button"
            android:layout_toLeftOf="@+id/aligning_button"
            android:layout_toStartOf="@+id/aligning_button"
            android:text="Show list" />

        <Button
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aligning_button"
            android:layout_toLeftOf="@+id/return_result_button"
            android:layout_toRightOf="@+id/list_button"
            android:layout_toStartOf="@+id/return_result_button"
            android:onClick="gotoMenuActivity"
            android:text="Menu" />

        <Button
            android:id="@+id/image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/menu_button"
            android:layout_alignBottom="@+id/menu_button"
            android:layout_alignEnd="@+id/return_result_button"
            android:layout_alignRight="@+id/return_result_button"
            android:layout_toRightOf="@+id/menu_button"
            android:text="image" />

        <Button
            android:id="@+id/dynamic_fragments_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/list_button"
            android:layout_toLeftOf="@+id/image_button"
            android:layout_toStartOf="@+id/image_button"
            android:text="Dynamic fragments" />

        <Button
            android:id="@+id/fragments_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dynamic_fragments_button"
            android:layout_alignBottom="@+id/dynamic_fragments_button"
            android:layout_toRightOf="@+id/dynamic_fragments_button"
            android:text="Fragments" />

        <Button
            android:id="@+id/youtube_runner_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dynamic_fragments_button"
            android:layout_toLeftOf="@+id/menu_button"
            android:layout_toStartOf="@+id/menu_button"
            android:text="Youtube" />

        <Button
            android:id="@+id/services_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/intent_button"
            android:layout_alignBottom="@+id/intent_button"
            android:layout_toEndOf="@+id/youtube_runner_button"
            android:layout_toRightOf="@+id/youtube_runner_button"
            android:text="Services" />

        <Button
            android:id="@+id/intent_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image_button"
            android:layout_alignRight="@+id/image_button"
            android:layout_below="@+id/fragments_button"
            android:layout_toRightOf="@+id/dynamic_fragments_button"
            android:text="Intents" />

        <Button
            android:id="@+id/rotation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/youtube_runner_button"
            android:text="Rotation check" />

        <Button
            android:id="@+id/alert_dialogue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rotation_button"
            android:layout_alignEnd="@+id/intent_button"
            android:layout_alignRight="@+id/intent_button"
            android:layout_toRightOf="@id/rotation_button"
            android:text="AlertDialogue" />

        <Button
            android:id="@+id/banks_details_button"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/fragments_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/fragments_button"
            android:layout_below="@+id/rotation_button"
            android:layout_toLeftOf="@+id/intent_button"
            android:layout_toStartOf="@+id/intent_button"
            android:text="Load banks from other app" />

        <Button
            android:id="@+id/context_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/banks_details_button"
            android:layout_toLeftOf="@+id/asynctask_button"
            android:layout_toStartOf="@+id/asynctask_button"
            android:text="Context menu" />

        <Button
            android:id="@+id/asynctask_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/banks_details_button"
            android:layout_alignRight="@+id/banks_details_button"
            android:layout_below="@+id/banks_details_button"
            android:layout_toRightOf="@+id/rotation_button"
            android:text="Async Tasks" />

        <Button
            android:id="@+id/programmatic_layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/context_menu_button"
            android:text="Programmatic layout" />

        <Button
            android:id="@+id/call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/alert_dialogue_button"
            android:layout_alignRight="@+id/alert_dialogue_button"
            android:layout_below="@+id/asynctask_button"
            android:layout_toRightOf="@+id/services_button"
            android:text="Call" />

        <Button
            android:id="@+id/parcelable_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/programmatic_layout_button"
            android:text="Parcelable" />

        <Button
            android:id="@+id/add_buttons_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/programmatic_layout_button"
            android:layout_toEndOf="@+id/parcelable_button"
            android:layout_toRightOf="@+id/parcelable_button"
            android:text="AddButtons" />

        <Button
            android:id="@+id/one_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/parcelable_button"
            android:text="OneFragmentActivity" />

        <!-- When adding a new view, provide the same view onto a landscape layout !!! -->

    </RelativeLayout>

</ScrollView>