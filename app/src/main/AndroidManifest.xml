<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vladislav.androidstudy">

    <!--INFO ABOUT MANIFEST.XML-->
    <!--http://developer.alexanderklimov.ru/android/theory/AndroidManifestXML.php-->
    <!--https://developer.android.com/guide/topics/manifest/manifest-intro.html-->

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--
             The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
             Google Maps Android API v2, but you must specify either coarse or fine
             location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Such a persmission is needed to check a wifi state -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.androidtest.READ_DATABASE" />
    <uses-permission android:name="com.android.androidtest.WRITE_DATABASE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <uses-library
            android:name="com.google.android.wearable"
            android:required="false" />

        <activity
            android:name=".Widgets2Activity"
            android:label="@string/title_activity_main2" />
        <activity
            android:name=".InitialActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WidgetsActivity" />
        <activity android:name=".ResultActivity" />
        <activity android:name=".LayoutingActivity" />
        <activity android:name=".AligningActivity" />
        <activity android:name=".ListsViewingActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".fragments_activity.FragmentsActivity" />
        <activity android:name=".fragments_activity.FragmentsDynamicActivity" />
        <activity android:name=".ImageActivity" />
        <activity android:name=".ServicesActivity" />
        <activity android:name=".banksdetails.BanksDetailsActivity" />

        <receiver android:name=".AirPlaneStateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.AIRPLANE_MODE" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.StartedSimpleService"
            android:description="@string/service_description"
            android:label="@string/service_description" />
        <service
            android:name=".services.StartedIntentService"
            android:description="@string/intent_service_description" />
        <service
            android:name=".services.BindSimpleService"
            android:description="@string/service_description"
            android:label="@string/service_description" />
        <service
            android:name=".services.BindIntentedService"
            android:description="@string/intent_service_description" />
        <service
            android:name=".services.BothSimpleService"
            android:description="@string/service_description"
            android:label="@string/service_description" />
        <service
            android:name=".services.BothIntentedService"
            android:description="@string/intent_service_description" />

        <activity android:name=".RotationActivity"></activity>
    </application>

</manifest>