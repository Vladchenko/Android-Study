<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vladislav.androidstudy.activities.ServicesActivity">

    <LinearLayout
        android:id="@+id/services_button_layout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/widgets2_button"
        android:layout_alignLeft="@+id/list_button"
        android:layout_alignRight="@+id/widgets2_button"
        android:layout_alignStart="@+id/list_button"
        android:layout_below="@+id/youtube_runner_button"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/demo1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_button"
            android:layout_centerHorizontal="true"
            android:onClick="gotoServicesActivity"
            android:text="Demo1" />

        <CheckBox
            android:id="@+id/intent_service_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_button"
            android:layout_centerHorizontal="true"
            android:text="IntentService" />

    </LinearLayout>

    <Button
        android:id="@+id/demo2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="gotoServicesActivity"
        android:text="Demo2"
        tools:layout_editor_absoluteY="48dp"
        tools:layout_editor_absoluteX="134dp"
        android:layout_below="@+id/services_button_layout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
